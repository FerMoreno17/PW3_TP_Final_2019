@model List<PracticaEF.Data.Propuestas>
@{
    ViewBag.Title = "Propuestas";
    PracticaEF.Data.Usuarios u = (PracticaEF.Data.Usuarios)Session["session"];
}

<div class="featured-cause pt-0 bg-danger">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                
            </div><!-- .col -->
        </div><!-- .row -->
    </div><!-- .container -->
</div><!-- .featured-cause -->

<div class="our-causes pt-0">
    <div class="container">
        <div class="row">

            @{
                foreach (var p in Model)
                {
                    if ((PracticaEF.Data.Usuarios)Session["session"] != null)
                    {
                        if (p.IdUsuarioCreador != u.IdUsuario)
                        {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="cause-wrap">
                                <figure class="m-0">
                                    <img src="~/Images/propuestas/@p.Foto" alt="" style="width: 100%; height: auto;">

                                    <div class="figure-overlay d-flex justify-content-center align-items-center position-absolute w-100 h-100">
                                        <a href="/Sites/PropuestaDetalle/@p.IdPropuesta" class="btn gradient-bg mr-2">Donar ahora</a>
                                    </div><!-- .figure-overlay -->
                                </figure>

                                <div class="cause-content-wrap">
                                    <header class="entry-header d-flex flex-wrap align-items-center">
                                        <h3 class="entry-title w-100 m-0"><a href="/Sites/PropuestaDetalle/@p.IdPropuesta">@p.Nombre</a></h3>
                                    </header><!-- .entry-header -->

                                    <div class="entry-content">
                                        <p class="m-0">Creada por: @p.Usuarios.Nombre @p.Usuarios.Apellido</p>
                                    </div><!-- .entry-content -->

                                    <div class="fund-raised w-100">
                                        <div class="fund-raised-bar-1 barfiller">
                                            <div class="tipWrap">
                                                <span class="tip"></span>
                                            </div><!-- .tipWrap -->

                                            <span class="fill" data-percentage="83"></span>
                                        </div><!-- .fund-raised-bar -->

                                        <div class="entry-content">
                                            <p class="m-0">Fecha creación: @p.FechaCreacion</p>
                                        </div><!-- .entry-content -->
                                        <!--div class="fund-raised-details d-flex flex-wrap justify-content-between align-items-center">
                                            <div class="fund-raised-total mt-4">
                                                Ya tenemos: $xxxxxx
                                            </div><!-- .fund-raised-total -->
                                                                <!--div class="fund-raised-goal mt-4">
                                            Necesitamos: $ xxxxxx
                                        </!--div><!-- .fund-raised-goal -->
                                        <!--/div><!-- .fund-raised-details -->
                                    </div><!-- .fund-raised -->
                                </div><!-- .cause-content-wrap -->
                            </div><!-- .cause-wrap -->
                        </div><!-- .col -->
                        }
                    }

                    else
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                                <div class="cause-wrap">
                                    <figure class="m-0">
                                        <img src="~/Images/propuestas/@p.Foto" alt="" style="width: 100%; height: auto;">

                                        <div class="figure-overlay d-flex justify-content-center align-items-center position-absolute w-100 h-100">
                                            <a href="/Sites/PropuestaDetalle/@p.IdPropuesta" class="btn gradient-bg mr-2">Donar ahora</a>
                                        </div><!-- .figure-overlay -->
                                    </figure>

                                    <div class="cause-content-wrap">
                                        <header class="entry-header d-flex flex-wrap align-items-center">
                                            <h3 class="entry-title w-100 m-0"><a href="/Sites/PropuestaDetalle/@p.IdPropuesta">@p.Nombre</a></h3>
                                        </header><!-- .entry-header -->

                                        <div class="entry-content">
                                            <p class="m-0">Creada por: @p.Usuarios.Nombre @p.Usuarios.Apellido</p>
                                        </div><!-- .entry-content -->

                                        <div class="fund-raised w-100">
                                            <div class="fund-raised-bar-1 barfiller">
                                                <div class="tipWrap">
                                                    <span class="tip"></span>
                                                </div><!-- .tipWrap -->

                                                <span class="fill" data-percentage="83"></span>
                                            </div><!-- .fund-raised-bar -->

                                            <div class="entry-content">
                                                <p class="m-0">Fecha creación: @p.FechaCreacion</p>
                                            </div><!-- .entry-content -->
                                            <!--div class="fund-raised-details d-flex flex-wrap justify-content-between align-items-center">
                                                <div class="fund-raised-total mt-4">
                                                    Ya tenemos: $xxxxxx
                                                </div><!-- .fund-raised-total -->
                                                                    <!--div class="fund-raised-goal mt-4">
                                                Necesitamos: $ xxxxxx
                                            </!--div><!-- .fund-raised-goal -->
                                            <!--/div><!-- .fund-raised-details -->
                                        </div><!-- .fund-raised -->
                                    </div><!-- .cause-content-wrap -->
                                </div><!-- .cause-wrap -->
                            </div><!-- .col -->
                        }
                    }
                }

        </div><!-- .row -->
    </div><!-- .container -->
</div><!-- .our-causes -->