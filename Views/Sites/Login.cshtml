@model PracticaEF.Data.Usuarios
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Ingresar";
}
    <div class="container h-100">
        <div class="row h-100 justify-content-center">
            <form class="col-sm-12 col-lg-7 contact-form mt-2 mb-2" action="/Sites/Login" method="post">
                <div class="form-group">
                    @Html.AntiForgeryToken()
                    @Html.LabelFor(o => o.Email)
                    @Html.TextBoxFor(o => o.Email)
                </div>
                <div class="form-group">
                    @Html.AntiForgeryToken()
                    @Html.LabelFor(o => o.Password)
                    @Html.TextBoxFor(o => o.Password, new {type = "password" })
                </div>
                @{ if (ViewBag.Error != "")
                    {
                        <div class="text-danger">@ViewBag.Error</div>
                    }}
                <div class="form-group">
                    <button type="submit" class="btn gradient-bg mr-2 right">Submit</button>
                </div>
            </form>
        </div>
    </div>
