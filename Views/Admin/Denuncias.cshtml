@model List<PracticaEF.Data.Denuncias>
@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Denuncias";
}

<h3><i class="fa fa-angle-right"></i> Denuncias</h3>

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <h6><i class="fa fa-angle-right ml-3"></i> Presta atención a todas las denuncias que han hecho tus usuarios.</h6><hr><table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th scope="col"><i class="fa fa-calendar"></i> Fecha</th>
                        <th scope="col"><i class="fa fa-thumb-tack"></i> Motivo</th>
                        <th scope="col"><i class="fa fa-eye"></i> Link</th>
                        <th scope="col"><i class="fa fa-comments-o"></i> Comentarios</th>
                        <th scope="col"><i class="fa fa-exclamation-triangle"></i> Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var o in Model)
                        {
                            <tr>
                                <td>@o.FechaCreacion</td>
                                <td>@o.IdMotivo</td>
                                <td>
                                    <a href="~/Sites/PropuestaDetalle/@o.IdPropuesta">Ver propuesta</a>
                                </td>
                                <td><p>@o.Comentarios</p></td>
                                <td>
                                    <a class="btn btn-primary btn-xs" href="~/Admin/AceptarDenuncia/@o.IdPropuesta"><i class="fa fa-check-circle-o"></i></a>
                                    <a class="btn btn-danger btn-xs" href="~/Admin/IgnorarDenuncia/@o.IdPropuesta"><i class="fa fa-trash-o "></i></a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>