@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
    PracticaEF.Data.Usuarios user = new PracticaEF.Data.Usuarios();
    user = (PracticaEF.Data.Usuarios)Session["session"];
}

<h3><i class="fa fa-angle-right mt-0"></i> Bienvenido @user.Nombre</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-4 col-sm-4 mb">
                <!-- REVENUE PANEL -->
                <div class="green-panel pn">
                    <div class="green-header">
                        <h5>Propuestas Activas</h5>
                    </div>
                    <h1 class="mt"><i class="fa fa-newspaper-o fa-3x"></i></h1>
                    <div class="centered">
                        <h5>Total: @ViewBag.PropuestasActivas</h5>
                    </div>
                    </footer>
                </div>
            </div>
            <!-- /col-md-4 -->
            
            <div class="col-md-4 col-sm-4 mb">
                <div class="darkblue-panel pn">
                    <div class="darkblue-header">
                        <h5>Donaciones Recibidas</h5>
                    </div>
                    <h1 class="mt"><i class="fa fa-gift fa-3x"></i></h1>
                    <footer>
                        <div class="centered">
                            <h5>Total: </i>@ViewBag.DonacionesRecibidas</h5>
                        </div>
                    </footer>
                </div>
                <!--  /darkblue panel -->
            </div>
            <!-- /col-md-4 -->
        </div>
        <!-- /row - SECOND ROW OF PANELS -->
        
    </div>
</div>
