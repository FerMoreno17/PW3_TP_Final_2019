@model Models.ModificarUsuario
@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Perfil";
}

    <section class="wrapper mt-0 h-100">
                <div class="row content-panel h-100 justify-content-center">
                    <div class="col-lg-8 detailed justify-content-center">
                        <div class="profile-pic">
                            <p><img src="~/Images/users/@ViewBag.UsuarioEncontrado.Foto" class="img-circle"></p>
                        </div>
                        <h4 class="mb">Datos Personales</h4>
                        <form action="~/Admin/Perfil" method="post"enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="file" name="file" value="" />
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(o => o.Nombre, new { @class = "col-lg-2 control-label"})
                                @Html.TextBoxFor(o => o.Nombre, new { @class = "form-control", @Value = @ViewBag.UsuarioEncontrado.Nombre  })
                                @Html.ValidationMessageFor(o => o.Nombre)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(o => o.Apellido, new { @class = "col-lg-2 control-label"})
                                @Html.TextBoxFor(o => o.Apellido, new { @class = "form-control", @Value = @ViewBag.UsuarioEncontrado.Apellido  })
                                @Html.ValidationMessageFor(o => o.Apellido)
                            </div>
                            <div class="form-group">
                                <button class="btn btn-theme" type="submit">Guardar</button>
                                <a class="btn btn-theme04" href="~/Index">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
 </section>
